{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "cSpell.ignoreWords": [
    "fastapi",
    "pydantic",
    "sqlmodel",
    "starlette",
    "templating",
    "venv",
    "sqlalchemy",
    "uvicorn",
    "asyncpg",
    "dotenv",
    "websockets"
  ]
}